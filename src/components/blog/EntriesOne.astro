---
const { title, url, description, pubDate, author } = Astro.props;
import Text from "@/components/fundations/elements/Text.astro";
---

<a href={url} title={title} class="group">
  <div
    class="flex flex-col pt-2 border-b pb-8 border-black/10 dark:border-white/10"
  >
    <Text
      tag="span"
      variant="textXS"
      class="font-medium text-zinc-500 dark:text-zinc-400 uppercase"
    >
      {author} -
      <time datetime={pubDate}>{pubDate}</time>
    </Text>
    <Text
      tag="h4"
      variant="textBase"
      class="text-black dark:text-white mt-1 font-medium group-hover:text-black/70 dark:group-hover:text-white/70"
    >
      {title}
    </Text>
    <Text
      tag="p"
      variant="textSM"
      class="text-zinc-500 dark:text-zinc-400 mt-4"
    >
      {description}
    </Text>
  </div>
</a>
