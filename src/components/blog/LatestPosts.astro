---
const { title, url, pubDate } = Astro.props;
import Text from "@/components/fundations/elements/Text.astro";

---

<a href={url} title={title} class="group">
  <div
    class="flex flex-col md:flex-row md:items-center justify-between relative py-2"
  >
    <Text
      tag="h4"
      variant="textBase"
      class="text-black dark:text-white font-medium group-hover:text-black/70 dark:group-hover:text-white/70"
    >
      {title}
    </Text>
    <Text
      tag="span"
      variant="textXS"
      class="font-medium text-zinc-500 dark:text-zinc-400 uppercase order-first md:order-last"
    >
      <time datetime={pubDate}>{pubDate}</time>
    </Text>
  </div>
</a>
